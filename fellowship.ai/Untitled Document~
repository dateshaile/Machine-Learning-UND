#rename the col
features = features.rename(columns={'eventid' :'id', 'iyear':'year', 'imonth':'month', 'iday':'day', 'country_txt':'country', 'region_txt':'region', 'city':'city', 'success': 'terror_success', 'suicide' :'terror_suicide', 'attacktype1_txt': 'attack_type',  'targtype1_txt':'target_type', 'weaptype1_txt': 'weapon_type', 'weapdetail':'weapon_detail', 'nkill' :'killed', 'nwound' :'wounded'})

#filling nan value with O (filling missing data of col killed and wounded with 0)
features['killed'] = features['killed'].fillna(0).astype(int)
features['wounded'] = features['wounded'].fillna(0).astype(int)

#imputing the missing value in weapon detail
features = features.fillna(features['weapon_detail'].value_counts().index[0])
